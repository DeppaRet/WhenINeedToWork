          </div>
      </div>-->

    </div><!--/col-3-->
    <div class="col-sm-9">
      @* при желании ниже можно добавить еще вкладок в личный кабинет *@
      <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a href="#home" data-toggle="tab">Календари</a></li>
      </ul>

      <div class="tab-content"> @* Код который заполняет наши созданные календари. в этом случае в бд надо будт хранить подобный html код *@
        <div class="tab-pane active" id="home">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>#</th>
                <th>Название</th>
                <th>Пометка</th>
                <th>Дата</th>
                <th>Выбрать</th>
                <th>Редактировать</th>
              </tr>
              </thead>
              <tbody id="items">
                  @for (int i = 1; i <= Model.AllUserCalendars.Count; i++)
                  {
                      <tr>
                          <td>@i</td>
                          <td>@Model.AllUserCalendars[i].Name</td>
                          @if (Model.AllUserCalendars[i].IsGeneralized == true)
                          {
                              <td>Смежный календарь</td>
                          }
                          else
                          {
                              <td>Рабочий календарь</td>
                          }
                          <td>@Model.AllUserCalendars[i].Year</td>
                          <td><input type="checkbox" id="name1"></td>
                          <td><button type="button" asp-page="/Index" data-uid="1" class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></button></td>
                      </tr>
                  }

                  @* кнопочка для редактирования *@
              <tr>
                <a asp-page="/CalendarEdit" id="add" name="add">Добавить новый</a>
              </tr>
              </tbody>
            </table>
            <hr>
            <div class="row">
              <div class="col-md-4 col-md-offset-4 text-center">
                <ul class="pagination" id="myPager"></ul>
              </div>
            </div>
          </div><!--/table-resp-->

          <hr>

        </div><!--/tab-pane-->




      </div><!--/tab-pane-->
    </div><!--/tab-content-->

  </div><!--/col-9-->
</div><!--/row-->

<script>
  $(document).ready(function () {


    var readURL = function (input) {
      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
          $('.avatar').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
      }
    }


    $(".file-upload").on('change', function () {
      readURL(this);
    });
  });
</script>