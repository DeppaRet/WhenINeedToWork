@page
@model WhenINeedToWork.Pages.LoginModel
@{
}
<head>
  <link rel="stylesheet" href="https://unpkg.com/js-year-calendar@latest/dist/js-year-calendar.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://unpkg.com/bootstrap-datepicker@1.8.0/dist/css/bootstrap-datepicker.standalone.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=PT+Serif&family=Roboto&display=swap" rel="stylesheet">
  <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        section {
            position: relative;
            width: 100%;
            min-height: 600px;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            overflow: hidden;
        }

        section .container_login {
            position: relative;
            width: 800px;
            height: 500px;
            background: #fff;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        section .container_login .user {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
        }

        section .container_login .user .imgBx {
            position: relative;
            width: 50%;
            height: 100%;
            background: #fff;
            transition: 0.5s;
        }

        section .container_login .user .imgBx img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        section .container_login .user .formBx {
            position: relative;
            width: 50%;
            height: 100%;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            transition: 0.5s;
        }

        section .container_login .user .formBx form h2 {
            font-size: 22px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
            width: 100%;
            margin-bottom: 10px;
            color: #555;
        }

          section .send, .container_login .user .formBx form input  {
            position: relative;
            width: 100%;
            padding: 10px;
            background: #f5f5f5;
            color: #333;
            border: none;
            outline: none;
            box-shadow: none;
            margin: 8px 0;
            font-size: 14px;
            letter-spacing: 1px;
            font-weight: 300;
          }

          section .send /*.container_login .user .formBx form input[type="submit"]*/ {
            max-width: 100px;
            background: #ff7f50;
            color: #111;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            letter-spacing: 1px;
            transition: 0.5s;
          }

        section .container_login .user .formBx form .signup {
            position: relative;
            margin-top: 20px;
            font-size: 12px;
            letter-spacing: 1px;
            color: #555;
            text-transform: uppercase;
            font-weight: 300;
        }

        section .container_login .user .formBx form .signup a {
            font-weight: 600;
            text-decoration: none;
            color: #677eff;
        }

        section .container_login .singupBx {
            pointer-events: none;
        }

        section .container_login.active .singupBx {
            pointer-events: initial;
        }

        section .container_login .singupBx .formBx {
            left: 100%;
        }

        section .container_login.active .singupBx .formBx {
            left: 0;
        }

        section .container_login .singupBx .imgBx {
            left: -100%;
        }

        section .container_login.active .singupBx .imgBx {
            left: 0;
        }

        section .container_login .singinBx .formBx {
            left: 0;
        }

        section .container_login.active .singinBx .formBx {
            left: 100%;
        }

        section .container_login .singinBx .imgBx {
            left: 0;
        }

        section .container_login.active .singinBx .imgBx {
            left: -100%;
        }

  </style>
</head>

<body>

<section>
    <div class="container_login">
      <div class="user singinBx">
        <div class="imgBx"><img src="images/calendar2.jpg"></div>
        <div class="formBx">
          <form method="post">
            <h2>Вход</h2>
            <input id="email" type="email" name="login"  placeholder="Логин">
            <input id="password" type="password" name="password" placeholder="Пароль" pattern="(?=.*\d)(?=.*[a-zA-Zа-яА-Я]).{6,}" title="Не менее 6 знаков, в том числе хотя бы одна цифра и буква">
            <button class="send">Войти</button>
            @*
            <input type="submit" name="" value="Войти">*@
          </form>
        </div>
      </div>
    </div>
</section>
  <script type="text/javascript">
    function toggleForm() {
      var container = document.querySelector('.container_login');
      container.classList.toggle('active');
    }
  </script>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
